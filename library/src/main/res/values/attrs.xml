<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HintedSpinner">
        <attr name="withDivider" format="boolean" />
        <attr name="dividerColor" format="color" />
        <attr name="arrowDrawable" format="reference" />
        <attr name="arrowTint" format="color" />
        <attr name="hint" format="string" />
        <attr name="hintTextColor" format="color" />
        <attr name="hintTextSize" format="dimension" />
        <attr name="popupBackground" format="color" />

        <!-- Defines the value of the alpha for popup between 0 and 255 -->
        <attr name="popupAlpha" format="integer" />
        <attr name="iconAnimation" format="boolean" />
        <attr name="popupMode" format="enum">
            <enum name="dialog" value="0" />
            <enum name="dropdown" value="1" />
        </attr>
        <attr name="cellGravity" format="enum">
            <enum name="start" value="8388611" />
            <enum name="end" value="8388613" />
            <enum name="left" value="3" />
            <enum name="right" value="5" />
            <enum name="center" value="17" />
            <enum name="bottom" value="80" />
            <enum name="top" value="48" />
            <enum name="centerHorizontal" value="1" />
            <enum name="centerVertical" value="16" />
            <enum name="noGravity" value="0" />
        </attr>
        <attr name="items" format="reference" />
    </declare-styleable>
</resources>