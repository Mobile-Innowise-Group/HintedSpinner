<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.craggyhaggy.hintedspinner.HintedSpinner
        android:id="@+id/hintedSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="32dp"
        app:hint="@string/hint"
        app:items="@array/weekday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hintedSpinner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hintSize"
                style="@style/TextViewStyle"
                android:text="@string/set_hint_size_14" />

            <SeekBar
                android:id="@+id/seekBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:max="54"
                android:min="10"
                android:progress="14" />

            <TextView
                android:id="@+id/divider_text"
                style="@style/TextViewStyle"
                android:text="@string/show_divider" />

            <ToggleButton
                android:id="@+id/with_divider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:textOff="@string/divider_is_hided"
                android:textOn="@string/divider_is_showed" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewParallelStyle"
                    android:text="@string/set_divider_color" />

                <TextView
                    style="@style/TextViewParallelStyle"
                    android:text="@string/set_arrow_color" />

                <TextView
                    style="@style/TextViewParallelStyle"
                    android:text="@string/set_hint_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <com.skydoves.colorpickerview.ColorPickerView
                    android:id="@+id/dividerColorPicker"
                    style="@style/ButtonStyle"
                    android:layout_height="150dp" />

                <com.skydoves.colorpickerview.ColorPickerView
                    android:id="@+id/arrowColorPicker"
                    style="@style/ButtonStyle"
                    android:layout_height="150dp" />

                <com.skydoves.colorpickerview.ColorPickerView
                    android:id="@+id/hintColorPicker"
                    style="@style/ButtonStyle"
                    android:layout_height="150dp" />

            </LinearLayout>

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/set_popupbackground"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/popup_background_red"
                    style="@style/ButtonStyle"
                    android:background="@color/red" />

                <Button
                    android:id="@+id/popup_background_green"
                    style="@style/ButtonStyle"
                    android:background="@color/green" />

                <Button
                    android:id="@+id/popup_background_blue"
                    style="@style/ButtonStyle"
                    android:background="@color/blue" />

                <Button
                    android:id="@+id/popup_background_1"
                    style="@style/ButtonStyle"
                    android:background="@color/dark_green" />

                <Button
                    android:id="@+id/popup_background_2"
                    style="@style/ButtonStyle"
                    android:background="@color/fuchsia" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


            </LinearLayout>

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/set_arrow_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/arrow_image_1"
                    style="@style/ButtonStyle"
                    android:src="@drawable/example_arrow_1" />

                <ImageButton
                    android:id="@+id/arrow_image_2"
                    style="@style/ButtonStyle"
                    android:src="@drawable/example_arrow_2" />

                <ImageButton
                    android:id="@+id/arrow_image_3"
                    style="@style/ButtonStyle"
                    android:src="@drawable/example_arrow_3" />

                <ImageButton
                    android:id="@+id/arrow_image_4"
                    style="@style/ButtonStyle"
                    android:src="@drawable/example_arrow_4" />

                <ImageButton
                    android:id="@+id/arrow_image_5"
                    style="@style/ButtonStyle"
                    android:src="@drawable/example_arrow_5" />
            </LinearLayout>

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/set_hint_style" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/hintNormal"
                    style="@style/ButtonStyle"
                    android:src="@drawable/normal" />

                <ImageButton
                    android:id="@+id/hintAllCaps"
                    style="@style/ButtonStyle"
                    android:src="@drawable/allcaps" />

            </LinearLayout>

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/set_new_hint" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/hint1"
                    style="@style/ButtonStyle"
                    android:text="@string/custom_hint_1" />

                <Button
                    android:id="@+id/hint2"
                    style="@style/ButtonStyle"
                    android:text="@string/custom_hint_2" />

                <Button
                    android:id="@+id/hint3"
                    style="@style/ButtonStyle"
                    android:text="@string/custom_hint_3" />
            </LinearLayout>

            <Button
                android:id="@+id/default_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/clean" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>